@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<br />
<h4>User Details</h4>
<a asp-action="Create" asp-controller="UserC">Add</a>
<br />

@{    
    <table class="table table-bordered table-primary">    
    @foreach (var item in Model)
    {
        @if (item != null)
        {

        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.DOB.ToString("dd/MM/yyyy")</td>
            <td>@item.MobileNo</td>
            <td>@item.EmailId</td>
            <td><a asp-controller="UserC" asp-action="Delete" asp-route-id="@item.Id" asp-route-name="@item.Name">Delete</a> </td>
            <td><a asp-controller="UserC" asp-action="Update" asp-route-id="@item.Id">Edit</a> </td>
        </tr>

        }

    }
</table>
}
